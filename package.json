{
  "name": "rhdp",
  "version": "3.0.1",
  "description": "RHDP - React Hook Datepicker. A React Hook based primitive to build simple, flexible datepicker components that are WAI-ARIA compliant, and support localization.",
  "author": "Roy Pearce <rhdp@roypearce.us> (github.com/roypearce)",
  "repository": "git@github.com:roypearce/rhdp.git",
  "license": "MIT",
  "keywords": [
    "react",
    "hook",
    "hooks",
    "datepicker",
    "date picker",
    "calendar",
    "wai-aria",
    "accessibility",
    "a11y",
    "range datepicker",
    "blocked dates",
    "multiple dates"
  ],
  "private": false,
  "engineStrict": true,
  "engines": {
    "node": ">=12"
  },
  "main": "dist/main.js",
  "module": "dist/module.js",
  "typings": "dist/declarations/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist",
    "!dist/**/*.map",
    "!dist/declarations/**/*.js"
  ],
  "scripts": {
    "build": "rollup -c && tsc",
    "coverage": "yarn coverage:instrument && yarn test:e2e-headless && yarn test:unit && yarn coverage:copy && yarn coverage:combine && npx nyc report && yarn coverage:final",
    "coverage:combine": "npx nyc merge coverage-json && mv coverage.json .nyc_output/out.json",
    "coverage:copy": "cp coverage/coverage-final.json coverage-json/cypress.json",
    "coverage:final": "node --experimental-json-modules ./nyc-summary.mjs",
    "coverage:instrument": "npx nyc instrument --compact=false src instrumented",
    "lint": "eslint && prettier --check src",
    "lint:fix": "eslint --fix && prettier --write src",
    "size": "size-limit",
    "storybook": "start-storybook -p 6006",
    "storybook:build": "build-storybook",
    "test:e2e": "npx cypress open",
    "test:e2e-headless": "npx cypress run",
    "test:unit": "jest"
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/preset-env": "^7.16.4",
    "@babel/preset-react": "^7.16.0",
    "@babel/preset-typescript": "^7.16.0",
    "@cypress/code-coverage": "^3.9.12",
    "@istanbuljs/nyc-config-babel": "^3.0.0",
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@rollup/plugin-typescript": "^8.3.0",
    "@size-limit/preset-small-lib": "^7.0.4",
    "@storybook/addon-a11y": "^6.4.10",
    "@storybook/addon-essentials": "^6.4.9",
    "@storybook/addons": "^6.4.9",
    "@storybook/react": "^6.4.9",
    "@storybook/theming": "^6.4.9",
    "@types/jest": "^27.0.3",
    "@types/node": "^17.0.6",
    "@typescript-eslint/eslint-plugin": "^5.3.1",
    "@typescript-eslint/parser": "^5.3.1",
    "babel-loader": "^8.2.3",
    "cypress": "9.2.0",
    "cypress-real-events": "^1.5.1",
    "eslint": "^8.2.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.27.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "jest": "^27.4.3",
    "node-static": "^0.7.11",
    "nyc": "^15.1.0",
    "prettier": "^2.4.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rollup": "^2.61.1",
    "rollup-plugin-delete": "^2.0.0",
    "rollup-plugin-terser": "^7.0.2",
    "size-limit": "^7.0.4",
    "storybook": "^6.4.9",
    "storybook-react": "^3.2.16",
    "ts-jest": "^27.0.7",
    "typescript": "^4.5.2"
  },
  "peerDependencies": {
    "react": ">=16.12.0"
  },
  "resolutions": {
    "ansi-regex": "^5.0.1",
    "browserslist": "^4.16.5",
    "glob-parent": "^5.1.2",
    "immer": "^9.0.6",
    "json5": "^2.2.2",
    "json-schema": "^0.4.0",
    "minimist": "^0.2.1",
    "node-fetch": "^2.6.1",
    "shelljs": "^0.8.5",
    "trim": "^0.0.3"
  }
}
